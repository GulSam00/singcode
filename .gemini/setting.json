{
  "ignore_patterns": [
    "**/node_modules/**",
    "**/.next/**",
    "**/.turbo/**",
    "dist/",
    "build/"
  ],
  "tool_config": {
    "run_shell_command": {
      "default_command": "pnpm run dev"
    }
  },
  "mcpServers": {
    "notionApi": {
      "command": "npx",
      "args": ["-y", "@notionhq/notion-mcp-server"],
      "env": {
        "OPENAPI_MCP_HEADERS": "{\"Authorization\": \"Bearer ntn_****\", \"Notion-Version\": \"2022-06-28\" }"
      }
    }
  }
}
