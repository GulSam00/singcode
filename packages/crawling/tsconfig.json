{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "esnext.asynciterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "./dist/types", // 디버깅 편의를 위해 추가
    "declarationMap": true, // 디버깅 편의를 위해 추가

    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"],

  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
